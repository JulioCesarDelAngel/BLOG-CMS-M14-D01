<div class="row">
    {{#each postRows}}

        <div class="card">
        <div class="card-header">
            <a href="/newcomment/{{id}}">{{title}}</a>  
            {{!-- {{#if loggedIn}}
                <a href="/newcomment/{{id}}">{{title}}</a>  
            {{else}}
                {{id}}  {{title}}
            {{/if}}   --}}
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
            <p>{{content}}</p>
            <footer class="blockquote-footer">Posted by {{user.username}}<cite> on {{ format_date createdat}}</cite></footer>
            </blockquote>
        </div>
        </div>
        <section>
        {{#each (filter_commentPost ../commentRows id )}}
            {{>comment parameter = ../../userId }}        
        {{/each}}
        </section>
    {{/each}} 
 </div>